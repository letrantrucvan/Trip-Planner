<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/containerActivities"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginVertical="15dp"
    app:cardCornerRadius="2dp"
    android:elevation="6dp"
    android:layout_height="wrap_content"
    android:background="#000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="#2E2E2E"
        android:id="@+id/item_row"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/placeCover"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/discover" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp">

            <TextView
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:text="Tên địa điểm"
                android:id="@+id/placeHeader"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#818181"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/address"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <RatingBar
                    android:id="@+id/rating_bar"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.1" />
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:id="@+id/rating"
                    android:layout_toEndOf="@id/rating_bar"
                    android:paddingHorizontal="5dp"
                    android:textColor="#fff"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_toEndOf="@id/rating"
                    android:id="@+id/total_rating"
                    android:paddingHorizontal="5dp"
                    android:textColor="#fff"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:layout_width="26dp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/favIcon"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/ic_baseline_favorite_24"
                    android:layout_height="26dp" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>