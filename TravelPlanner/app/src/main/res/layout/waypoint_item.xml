<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/parent"
    android:layout_height="315dp"
    android:layout_width="205dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_do_not_disturb_on_24"/>

    <androidx.cardview.widget.CardView
        android:layout_alignParentBottom="true"
        android:layout_width="190dp"
        android:id="@+id/parentCard"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="20dp"
        android:elevation="6dp"
        android:layout_margin="5dp"
        android:layout_height="300dp">

        <RelativeLayout
            android:background="#2C2C2C"
            android:id="@+id/holderCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/destinationCover"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/discover" />

            <TextView
                android:id="@+id/destinationHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/destinationCover"
                android:layout_alignStart="@id/destinationCover"
                android:layout_marginHorizontal="7dp"
                android:textColor="#fff"
                android:layout_marginVertical="5dp"
                android:text="Tên địa điểm"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/destinationAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B3B3B3"

                android:layout_below="@+id/destinationHeader"
                android:layout_alignStart="@id/destinationCover"
                android:layout_marginHorizontal="7dp"
                android:layout_marginVertical="7dp"
                android:text="Tên địa điểm"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="11sp"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
