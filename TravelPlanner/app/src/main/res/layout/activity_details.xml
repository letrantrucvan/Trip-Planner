                    android:padding="20dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tour_description_full_txt"
                    android:layout_width="match_parent"
                    android:layout_height= "wrap_content"
                    android:text="Available flight akjsgdi ashd tasv ajshdt asgdh agsd adas jhdajsdf jafgsd jasd jhavsd hja dfdyfduf kdhkfgsy dgsd  ashdj asjkda ks d  ba hsgd a bsdgahs a  shjsad j hasvd  ahsg d jhasv mavsd  jhafsd h avs  hasfdjdafjsdf ashd  ahsdga ashdg ahsd nasdhav  ahsg dhaks vamsdafgbsn akhsgdahsd amsdgajsd v masdsv ahsfddh am sdma vsdj hasdmha vsdm asgd  mans dmabskdb n hasgd d kudf sd jhas djasd dnamsmgd  hags asgdhd ambnsd hagsdd asmd a"
                    android:padding="20dp"
                    android:visibility="gone"
                    android:textColor="@color/white"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/detail_btnReadMore"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:text="Xem thêm"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_round"
                    android:backgroundTint="@color/notSoDark"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:id="@+id/ct2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:text="Địa điểm"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <!--recycleview-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="280dp"
                        android:layout_height="150dp"
                        android:layout_marginRight="10dp"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/img1" />
                    </androidx.cardview.widget.CardView>
                    <!-- recycleview-->

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="80dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/notSoDark"
                        android:clipToPadding="false">

                        <View
                            android:id="@+id/indicator"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:background="@drawable/detail_tab_layout_bg" />

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tab"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@drawable/detail_outline_tab"
                            app:tabGravity="fill"
                            app:tabMode="fixed"
                            app:tabSelectedTextColor="@color/black"
                            app:tabTextColor="@color/orange"
                            app:tabIndicatorColor="@color/transparent"
                            app:tabRippleColor="@color/orange"
                            app:tabTextAppearance="@style/detail_tab_text_style"/>
                    </FrameLayout>

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>



</LinearLayout>