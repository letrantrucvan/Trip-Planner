<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Create_new_tour">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/close"
                android:layout_width="39dp"
                android:layout_height="34dp"
                android:paddingTop="10dp"
                android:src="@drawable/ic_baseline_close_24"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="right"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chuyến đi mới"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.Tên chuyến đi"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:visibility="visible"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/tourName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:hint="Nhập tên chuyến đi"
                            android:textColorHint="@color/grey"
                            android:background="@drawable/edit_text_white"
                            android:backgroundTint="@color/notSoDark"
                            android:layout_marginTop="10dp"
                            android:ems="10"
                            android:inputType="textPersonName"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2.Chọn ảnh bìa"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="visible">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="20dp"
                            android:layout_marginTop="10dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/cover_pic"
                                android:layout_width="wrap_content"
                                android:layout_height="250dp"
                                android:scaleType="centerCrop"
                                android:layout_gravity="center"
                                android:src="@drawable/temp_cover"/>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3.Mô tả"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:visibility="visible"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_white"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/notSoDark"
                            android:layout_marginTop="10dp"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:hint="Nhập mô tả"
                            android:textColorHint="@color/grey"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/finish_button"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="right"
                            android:background="@drawable/bg_round"
                            android:text="tiếp tục"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:textColor="@color/white"
                            app:backgroundTint="@color/primaryColor" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>