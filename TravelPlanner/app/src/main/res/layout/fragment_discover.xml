<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".fragment.DiscoverFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:fontFamily="sans-serif"
            android:text="Khám phá"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/search_ic"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/ic_baseline_search"
            tools:ignore="VectorDrawableCompat" />

        <ScrollView
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_below="@id/view2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">



                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView1"
                    android:layout_width="match_parent"
                    android:layout_height="353dp"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="20dp">


                    <ImageView
                        android:id="@+id/tourOfTheWeek_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/discover"
                        android:visibility="visible"/>

                    <LinearLayout
                        android:id="@+id/discover_progress1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@color/black"
                        android:visibility="gone">
                        <ProgressBar
                            android:layout_width="15pt"
                            android:layout_height="15pt"
                            android:indeterminate="true"
                            android:indeterminateDrawable="@drawable/progress_bg"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="213dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="CHUYẾN ĐI CỦA TUẦN"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="240dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="-50dp"
                    android:background="@color/notSoDark"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/cardView1"
                    app:cardBackgroundColor="@color/notSoDark"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/tourOfTheWeek_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="10dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="Hong Kong"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:typeface="normal" />

                        <TextView
                            android:id="@+id/tourOfTheWeek_placeNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:text="5 địa điểm"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tourOfTheWeek_author"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="China"
                            android:textColor="@color/grey"
                            android:textSize="14sp"
                            android:textStyle="italic" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="match_parent"
                    android:layout_height="353dp"
                    android:layout_marginTop="32dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/cardView2"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/theNewestTour_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/tokyo" />

                    <LinearLayout
                        android:id="@+id/discover_progress2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@color/black"
                        android:visibility="gone">
                        <ProgressBar
                            android:layout_width="15pt"
                            android:layout_height="15pt"
                            android:indeterminate="true"
                            android:indeterminateDrawable="@drawable/progress_bg"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="213dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="CHUYẾN ĐI MỚI NHẤT"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView4"
                    android:layout_width="240dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="-50dp"
                    android:background="@color/notSoDark"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/cardView3"
                    app:cardBackgroundColor="@color/notSoDark"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/theNewestTour_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="10dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="Hong Kong"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:typeface="normal" />
                        <TextView
                            android:id="@+id/theNewestTour_placeNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:text="5 địa điểm"
                            android:textColor="@color/white"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/theNewestTour_author"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="China"
                            android:textColor="@color/grey"
                            android:textSize="14sp"
                            android:textStyle="italic"  />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/popularTour"
                    android:layout_marginBottom="-60dp"
                    android:text="Chuyến đi nổi bật trong tháng"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/popularTour"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@id/cardView4"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView4">

                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/fyp"
                    android:layout_marginBottom="-40dp"
                    android:text="Dành cho bạn"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fyp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@id/popularTour"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView4">

                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-40dp"
                    android:layout_above="@+id/island"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Địa điểm nổi bật" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/island"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="20dp"
                    android:nestedScrollingEnabled="false"
                    android:layout_below="@id/fyp"/>

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/budget"
                    android:layout_marginBottom="-30dp"
                    android:text="Địa điểm gần nơi đây"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/budget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@id/island"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView4">

                </androidx.recyclerview.widget.RecyclerView>



            </RelativeLayout>
        </ScrollView>


    </RelativeLayout>
</FrameLayout>