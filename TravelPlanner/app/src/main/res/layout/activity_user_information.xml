<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.UserInformationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="40dp"
        android:background="@color/black">


        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="75dp"
            app:cardBackgroundColor="@color/orange">

            <ImageView
                android:id="@+id/userinformation_imgvAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/testavatar"
                android:layout_gravity="center"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/userinformation_edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:gravity="center"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="22dp"
            android:text="Nguyễn Hoàng Minh" />

        <TextView
            android:id="@+id/userinformation_edtEditInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/black"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:textSize="14dp"
            android:drawableRight="@drawable/ic_baseline_edit"
            android:visibility="visible"
            android:text="Sửa thông tin " />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/userinformation_btnSaveInfo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/userinformation_btnsaveinfo"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="12dp"
            android:visibility="gone"
            android:text="Lưu thay đổi" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Email" />

        <TextView
            android:id="@+id/userinformation_edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:textColor="@color/grey"
            android:layout_marginTop="10dp"
            android:textStyle="bold|italic"
            android:textSize="16dp"
            android:text="minh.nguyen28122000@gmail.com"
            android:drawableRight="@drawable/ic_baseline_lock"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/userinformation_btnSignout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/userinformation_btnsignout"
            android:textColor="@color/danger"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Đăng xuất tài khoản" />



    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/notSoDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/discover"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:srcCompat="@drawable/ic_compass"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/homeView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.533"
        app:srcCompat="@drawable/ic_home"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/bookmark"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/discover"
        app:layout_constraintStart_toEndOf="@+id/homeView"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:srcCompat="@drawable/ic_bookmark"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/more"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.533"
        app:srcCompat="@drawable/ic_read_more_active"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/bell"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/more"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toEndOf="@+id/discover"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.533"
        app:srcCompat="@drawable/ic_notification"
        tools:ignore="VectorDrawableCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>