<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/notSoDark"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bookmarkAvatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/test_avatar"
                android:layout_gravity="center"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="15dp">

                <TextView
                    android:id="@+id/bookmarkTourName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên chuyến đi"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/bookmarkAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tên người tạo"
                    android:textColor="@color/grey"
                    android:textStyle="italic"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/bookmarkLikeNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textColor="@color/white"
                        android:drawableLeft="@drawable/ic_baseline_favorite"/>

                    <TextView
                        android:id="@+id/bookmarkCommentNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:drawableLeft="@drawable/ic_baseline_chat"
                        android:text="20"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/bookmarkPublishDay"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="28/12/2000"
                        android:textColor="@color/grey"
                        android:textAlignment="textEnd"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>