<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/notSoDark"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bookmarkAvatar"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:src="@drawable/test_avatar"
                android:layout_gravity="center"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp">

                <TextView
                    android:id="@+id/bookmarkTourName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên chuyến đi"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/bookmarkWayPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 địa điểm"
                    android:textSize="14dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/bookmarkAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đăng bởi tên người tạo"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="14dp"
                    android:textColor="@color/grey"
                    android:textStyle="italic"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>



