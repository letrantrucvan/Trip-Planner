<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".fragment.UserInfoFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/userInfoNormal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="40dp"
            android:background="@color/black">


            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="75dp"
                app:cardBackgroundColor="@color/orange">

                <ImageView
                    android:id="@+id/userinformation_imgvAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/test_avatar"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/userinformation_edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPersonName"
                android:gravity="center"
                android:background="@color/black"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="22dp"
                android:text="" />

            <TextView
                android:id="@+id/userinformation_edtEditInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/black"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="14dp"
                android:drawableRight="@drawable/ic_baseline_edit"
                android:visibility="visible"
                android:text="Sửa thông tin " />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/userinformation_btnSaveInfo"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/bg_round"
                app:backgroundTint="@color/orange"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="12dp"
                android:visibility="gone"
                android:text="Lưu thay đổi" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Email" />

            <TextView
                android:id="@+id/userinformation_edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:textColor="@color/grey"
                android:layout_marginTop="10dp"
                android:textStyle="bold|italic"
                android:textSize="16dp"
                android:text=""
                android:drawableRight="@drawable/ic_baseline_lock"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/userinformation_btnSignout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/notSoDark"
                android:textColor="@color/danger"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Đăng xuất tài khoản" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/userInfoGotoLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:backgroundTint="@color/black"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_sentiment_dissatisfied_24"
                app:tint="@color/notSoDark"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn cần đăng nhập để xem nội dung này"
            android:textSize="14dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/userInfoBtnGotoLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round"
            android:backgroundTint="@color/orange"
            android:layout_marginTop="20dp"
            android:text="Đăng nhập"
            android:textSize="16dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>
    </LinearLayout>

</FrameLayout>